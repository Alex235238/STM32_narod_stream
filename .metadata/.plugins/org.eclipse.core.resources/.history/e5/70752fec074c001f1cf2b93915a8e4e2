#include "lcd.h"
//----------------------------
void lcd_delay(void)
{
	uint16_t i;
	for (i = 0; i<1000; i++)
	{

	}
}
//----------------------------
void lcd_WriteData(uint8_t)
{
	if(((dt>>3)&0x01) == 1) {c9_set;} else {c9_reset;}
	if(((dt>>2)&0x01) == 1) {c8_set;} else {c8_reset;}
	if(((dt>>1)&0x01) == 1) {c7_set;} else {c7_reset;}
	if((dt&0x01) == 1) {c6_set;} else {c6_reset;}

}
//----------------------------
void lcd_command(uint8_t dt)
{
	rs0;
	lcd_WriteData(dt>>4);
	e1;
	lcd_delay();
	e0;
	lcd_WriteData(dt);
	e1;
	lcd_delay();
	e0;
}
//----------------------------
void lcd_init(void){
	HAL_Delay(40);
	rs0;
	lcd_WriteData(3);
	e1;
	lcd_delay();
	e0;
	HAL_Delay(1);
	lcd_WriteData(3);
	e1;
	lcd_delay();
	e0;
	HAL_Delay(1);
	lcd_WriteData(3);
	e1;
	lcd_delay();
	e0;
	HAL_Delay(1);
	lcd_command(0x28); //режим 4 бит, 2 линии (для нашего большого дисплея это 4 линии), шрифт 5х8
	HAL_Delay(1);
	lcd_command(0x28); //еще раз для верности
	HAL_Delay(1);
	lcd_command(0x0F); //дисплей включаем (D=1), также включаем пока все курсоры
	HAL_Delay(1);
	LCD_Command(0x01);//уберем мусор
	HAL_Delay(2);
	LCD_Command(0x06);//пишем влево.
	HAL_Delay(1);
	LCD_Command(0x02);//возврат курсора в нулевое положение
	HAL_Delay(2);

}
